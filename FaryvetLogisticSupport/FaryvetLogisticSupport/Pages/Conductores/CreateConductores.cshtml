@page
@model FaryvetLogisticSupport.Pages.Conductores.CreateConductoresModel
@{
    ViewData["Title"] = "CreateConductores";
}

<br/>
<h1>Registrar un nuevo conductor</h1>
<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container">
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.NumeroIdentificacion">
                            Número de indentificación<a style="color:red">*</a>
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_Conductor.NumeroIdentificacion" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.NumeroIdentificacion" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.Nombre">
                            Nombre<a style="color:red">*</a>
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_Conductor.Nombre" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.Nombre" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.PrimerApellido">
                            Primer apellido<a style="color:red">*</a>
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_Conductor.PrimerApellido" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.PrimerApellido" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.SegundoApellido">
                            Segundo apellido<a style="color:red">*</a>
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_Conductor.SegundoApellido" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.SegundoApellido" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.FechaContratacion">
                            Fecha de contratación<a style="color:red">*</a>
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input type = "date" asp-format="{dd-MM-yyyy}" asp-for="FARYVET_FLS_Conductor.FechaContratacion" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.FechaContratacion" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.Estado">
                            Estado<a style="color:red">*</a>
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <select asp-for="FARYVET_FLS_Conductor.Estado" class="form-control">
                            <option selected="selected">Disponible</option>
                            <option>Incapacitado</option>
                            <option>Vacaciones</option>
                        </select>
                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.Estado" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.IsEntrega">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_Conductor.IsEntrega" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.IsEntrega" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <input type="submit" value="Registrar" class="btn btn-primary form-control" data-toggle="tooltip" title="Registrar datos"/>
                    </div>
                    <div class="col-2">
                        <a asp-page="../Index" class="btn btn-success form-control" data-toggle="tooltip" title="Cancelar acción">
                            Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>