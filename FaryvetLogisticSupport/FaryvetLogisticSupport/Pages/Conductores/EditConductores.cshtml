@page
@model FaryvetLogisticSupport.Pages.Conductores.EditConductoresModel
@{
    ViewData["Title"] = "EditConductores";
}

<h1>Editar Conductores</h1>

<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="container">
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.NumeroIdentificacion">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input disabled asp-for="FARYVET_FLS_Conductor.NumeroIdentificacion" class="form-control" />
                        <input type="hidden" asp-for="FARYVET_FLS_Conductor.NumeroIdentificacion" class="form-control" />

                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.NumeroIdentificacion" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.Nombre">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_Conductor.Nombre" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.Nombre" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.PrimerApellido">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_Conductor.PrimerApellido" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.PrimerApellido" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.SegundoApellido">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_Conductor.SegundoApellido" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.SegundoApellido" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.FechaContratacion">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input disabled asp-for="FARYVET_FLS_Conductor.FechaContratacion" class="form-control" />
                        <input type="hidden" asp-for="FARYVET_FLS_Conductor.FechaContratacion" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.FechaContratacion" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.Estado">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <select asp-for="FARYVET_FLS_Conductor.Estado" class="form-control">
                            <option selected="selected">Disponible</option>
                            <option>Incapacitado</option>
                            <option>Vacaciones</option>
                        </select>
                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.Estado" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_Conductor.IsEntrega">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_Conductor.IsEntrega" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_Conductor.IsEntrega" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <input type="submit" value="Guardar" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-2">
                        <a asp-page="IndexConductores" class="btn btn-success form-control">
                            Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}