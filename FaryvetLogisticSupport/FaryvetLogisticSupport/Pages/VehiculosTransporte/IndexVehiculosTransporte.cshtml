@page
@model FaryvetLogisticSupport.Pages.VehiculosTransporte.IndexVehiculosTransporteModel
@{
    ViewData["Title"] = "IndexVehiculosTransporte";
}
<h1>Vehiculos de Transporte</h1>


<div class="col-2">
    <a asp-page="CreateVehiculosTransporte" class="btn btn-primary form-control" data-toggle="tooltip" title="Agregar un nuevo vehiculo">
        Nuevo
    </a><p></p>
</div>

<form method="post">
    @if (Model.FARYVET_FLS_VehiculoTransporte.Count() > 0)
    {
        <table id="tabla" class="table-responsive table-striped display nowrap" cellspacing="0" width="100%" style="margin-bottom: 0;overflow-y:auto;">
            <thead>
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.FARYVET_FLS_VehiculoTransporte.FirstOrDefault().NumeroPlaca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FARYVET_FLS_VehiculoTransporte.FirstOrDefault().Marca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FARYVET_FLS_VehiculoTransporte.FirstOrDefault().Modelo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FARYVET_FLS_VehiculoTransporte.FirstOrDefault().AnnioFabricacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FARYVET_FLS_VehiculoTransporte.FirstOrDefault().CapacidadCarga)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FARYVET_FLS_VehiculoTransporte.FirstOrDefault().CapacidadCombustible)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FARYVET_FLS_VehiculoTransporte.FirstOrDefault().FechaRiteve)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FARYVET_FLS_VehiculoTransporte.FirstOrDefault().CostoMarchamo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FARYVET_FLS_VehiculoTransporte.FirstOrDefault().CVOSenasa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FARYVET_FLS_VehiculoTransporte.FirstOrDefault().Estado)
                    </th>                    
                    <th>
                        @Html.DisplayNameFor(m => m.FARYVET_FLS_VehiculoTransporte.FirstOrDefault().Comentario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FARYVET_FLS_VehiculoTransporte.FirstOrDefault().LicenciaRequerida)
                    </th>
                    <th colspan="2">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.FARYVET_FLS_VehiculoTransporte)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.NumeroPlaca)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Modelo)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.AnnioFabricacion)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.CapacidadCarga)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.CapacidadCombustible)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.FechaRiteve)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.CostoMarchamo)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.CVOSenasa)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Estado)
                        </td>                       
                        <td>
                            @Html.DisplayFor(m => item.Comentario)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.LicenciaRequerida)
                        </td>
                        <td>
                            <a asp-route-NumeroPlaca="@item.NumeroPlaca" asp-page="EditVehiculoTransporte" class="btn btn-success form-control" data-toggle="tooltip" title="Editar vehiculo">
                                Editar
                            </a>                           
                        </td>
                        <td>
                            <button asp-page-handler="Delete" asp-route-NumeroPlaca="@item.NumeroPlaca" data-toggle="tooltip" title="Eliminar vehiculo"
                                    class="btn btn-danger form-control">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>        
    }
    else
    {
        <p>No se encuentran datos disponibles</p>
    }
</form>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#tabla").datatable().fnDestroy();
            $("#tabla").dataTable({
                "scrollX": true,
                "scrollY": 200,
                "ajax": {
                    "url": "/Pages/VehiculosTransporte/IndexVehiculosTransporte/GetList",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "NumeroPlaca" },
                    { "data": "Marca" },
                    { "data": "Modelo" },
                    { "data": "AnnioFabricacion" },
                    { "data": "CapacidadCarga" },
                    { "data": "CapacidadCombustible" },
                    { "data": "FechaRiteve" },
                    { "data": "CostoMarchamo" },
                    { "data": "CVOSenasa" },
                    { "data": "Estado" },
                    { "data": "Comentario" },
                    { "data": "LicenciaRequerida" },
                    { "data": "Acciones" }
                ],
            });
        });
    </script>
}