@page
@model FaryvetLogisticSupport.Pages.VehiculosTransporte.EditVehiculoTransporteModel
@{
    ViewData["Title"] = "EditVehiculoTransporte";
}

<h1>Editar Vehiculo de Transporte</h1>

<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container">
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_VehiculoTransporte.NumeroPlaca">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input disabled asp-for="FARYVET_FLS_VehiculoTransporte.NumeroPlaca" class="form-control" />
                        <input type="hidden" asp-for="FARYVET_FLS_VehiculoTransporte.NumeroPlaca" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_VehiculoTransporte.NumeroPlaca" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_VehiculoTransporte.Marca">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_VehiculoTransporte.Marca" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_VehiculoTransporte.Marca" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_VehiculoTransporte.Modelo">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_VehiculoTransporte.Modelo" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_VehiculoTransporte.Modelo" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_VehiculoTransporte.AnnioFabricacion">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_VehiculoTransporte.AnnioFabricacion" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_VehiculoTransporte.AnnioFabricacion" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_VehiculoTransporte.CapacidadCarga">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_VehiculoTransporte.CapacidadCarga" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_VehiculoTransporte.CapacidadCarga" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_VehiculoTransporte.CapacidadCombustible">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_VehiculoTransporte.CapacidadCombustible" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_VehiculoTransporte.CapacidadCombustible" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_VehiculoTransporte.FechaRiteve">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input type="date" asp-for="FARYVET_FLS_VehiculoTransporte.FechaRiteve.Date" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_VehiculoTransporte.FechaRiteve" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_VehiculoTransporte.CostoMarchamo">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_VehiculoTransporte.CostoMarchamo" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_VehiculoTransporte.CostoMarchamo" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_VehiculoTransporte.CVOSenasa">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_VehiculoTransporte.CVOSenasa" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_VehiculoTransporte.CVOSenasa" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_VehiculoTransporte.Estado">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <select asp-for="FARYVET_FLS_VehiculoTransporte.Estado" class="form-control">
                            <option selected="selected">Disponible</option>
                            <option>En mantenimiento</option>
                        </select>
                    </div>
                    <span asp-validation-for="FARYVET_FLS_VehiculoTransporte.Estado" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_VehiculoTransporte.IsEntrega">
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input asp-for="FARYVET_FLS_VehiculoTransporte.IsEntrega" class="form-control" />
                    </div>
                    <span asp-validation-for="FARYVET_FLS_VehiculoTransporte.IsEntrega" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="FARYVET_FLS_VehiculoTransporte.Comentario">
