                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input disabled asp-for="FARYVET_FLS_VehiculoTransporte.LicenciaRequerida" class="form-control"/>
                        <input type="hidden" asp-for="FARYVET_FLS_VehiculoTransporte.LicenciaRequerida" class="form-control"/>
                    </div>
                    <span asp-validation-for="FARYVET_FLS_VehiculoTransporte.LicenciaRequerida" class="text-danger">
                    </span>
                </div>
            </div>
        </div>
        <div>
            <div class="form-group">
                <div class="row">
                    <div class="col-2">
                        <input type="submit" value="Guardar" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-2">
                        <a asp-page="IndexVehiculosTransporte" class="btn btn-success form-control">
                            Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>